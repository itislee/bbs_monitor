{
  "manifest_version": 3,
  "name": "BBS Monitor",
  "version": "1.0.0",
  "description": "Monitor BBS forums for new posts containing specified keywords",
  "permissions": [
    "storage",
    "notifications"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "options_page": "options.html",
  "action": {
    "default_popup": "popup.html",
    "default_title": "BBS Monitor Options"
  },
  "web_accessible_resources": [
    {
      "resources": ["results.html", "results.js"],
      "matches": ["<all_urls>"]
    }
  ]
}